.list_sort {
  width: 100%;
  height: 100rpx;
  background-color: white;
  padding: 0 22rpx;
}
.list_sort .list {
  float: left;
  width: 33.3%;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #7a7a7a;
  text-align: center;
  line-height: 100rpx;
  position: relative;
}
.list_sort .list .sort {
  position: absolute;
  text-align: left;
  left: 67%;
  top: -3%;
}
.list_sort .list .sort view {
  height: 8rpx;
  width: 8rpx;
}
.list_sort .list:hover {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #1c7df6;
}
